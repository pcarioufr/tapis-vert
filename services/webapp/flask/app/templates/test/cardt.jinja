<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peek at Card Corner</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/test.css') }}" />

</head>
<body>

<div class="card-container" id="card-container">
    <div class="card" id="card">
        <div class="card-face card-front" id="card-front">Front</div>
        <div class="card-face card-back" id="card-back">Back</div>
        <div class="corner corner-front" id="corner-front">10</div>
        <div class="corner corner-back" id="corner-back"></div>
    </div>
</div>


<script>
    const ccard = document.getElementById('card-container');
    const card = document.getElementById('card');

    // Toggle the corner peek effect on click
    ccard.addEventListener('click', function () {
        card.classList.toggle('peek-corner');
    });

    // Flip the card on double-click
    ccard.addEventListener('dblclick', function () {
        card.classList.toggle('flipped'); // Toggles the flipped class
    });



</script>

</body>
</html>
