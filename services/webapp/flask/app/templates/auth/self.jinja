    <!-- SELF ------ ------ ------ ------ -->

    <link rel="stylesheet" href="{{ url_for('static', filename='styles/auth/self.css') }}" />


    <!-- SelfFooterEntry -->

    <template id=t-self-footer-panel>
        <div class="self-footer-panel">
            <span class="title">me</span>
            <div class="c-cookie"></div>
            <div class="c-login">
                <!-- TextInput: Magic Link -->
                <!-- Button: Logout -->
            </div>
            <div class="c-loggedin">
                <!-- TextInput: Name -->
                <!-- Button: Logout -->
            </div>
            <div class="c-role">
                <div class="choice" master noselect>
                    <!-- <svg></svg> goes here -->
                    <span>master</span>
                </div>
                <div class="choice" player noselect>
                    <!-- <svg></svg> goes here -->
                    <span>player</span>
                </div>
                <div class="choice" watcher noselect>
                    <!-- <svg></svg> goes here -->
                    <span>watcher</span>
                </div>
            </div>

        </div>
    </template>

    <script>

    class SelfFooterEntry extends FooterEntry {

        constructor() {

            super( "left-entries" )

            this.icon = "account-circle-line"
            this.name = "{{user.name}}"

            this.panel = build("t-self-footer-panel")

            // Cookies Section

            this.cookies = new Cookies()
            this.switch = new Switch(this.footerPanel.select(".c-cookie"))

            this.cookies.get("ok_cookie") == "yes" ?
                this.switch.checked = true :
                this.switch.checked = false ;

            this.switch.onCallback  = ( _ => this.cookies.set("ok_cookie", "yes") )
            this.switch.onText      = "I Accept Cookies"
            this.switch.offCallback = ( _ => this.cookies.delete("ok_cookie")     )
            this.switch.offText     = "I Reject Cookies"


            {% if user.is_authenticated %}

            // Authent Section - Logged in option

            // this.nameInput     = new TextInput()
            // this.footerPanel.select(".c-loggedin").append(this.nameInput.e)

            // this.nameInput.title = "name"
            // this.nameInput.spellcheck = false
            // this.nameInput.autocomplete = "username"

            this.logout = new Button()
            this.footerPanel.select(".c-loggedin").append(this.logout.e)
            this.logout.name = "log out"
            this.logout.icon = "logout-circle"
            this.logout.color = "red"

            this.logout.callback = ( async _ => {

                const resp = await call('POST', '/auth/logout', { user_id: "{{user.id}}" })
                const data = await resp.json() 
                                        
                this.footerPanel.untag("logged")

            })

            const svgM = new SVG("crown-line");
            this.footerPanel.select(".choice[master]").prepend(svgM.e)
            this.footerPanel.select(".choice[master]").onclick = ( _ => { 
                call("PATCH","/api/v1/rooms/{{room.id}}/user/{{user.id}}",{"role": "master"})
                this.role = "master"
            })

            const svgP = new SVG("crown-line");
            this.footerPanel.select(".choice[player]").prepend(svgP.e)
            this.footerPanel.select(".choice[player]").onclick = ( _ => { 
                call("PATCH","/api/v1/rooms/{{room.id}}/user/{{user.id}}",{"role": "player"})
                this.role = "player"
            })

            const svgW = new SVG("crown-line");
            this.footerPanel.select(".choice[watcher]").prepend(svgW.e)
            this.footerPanel.select(".choice[watcher]").onclick = ( _ => { 
                call("PATCH","/api/v1/rooms/{{room.id}}/user/{{user.id}}",{"role": "watcher"})
                this.role = "watcher"
            })

            {% else %}

            // Authent Section - Login [with Magic Link] option

            this.codeInput = new TextInput()
            this.footerPanel.select(".c-login").append(this.codeInput.e)

            this.codeInput.title = "password"
            this.codeInput.password = true
            this.codeInput.autocomplete = "current-password"

            this.login = new Button()
            this.codeInput.e.after(this.login.e)
            this.login.name = "log in"
            this.login.icon = "login-circle"
            this.login.color = "green"
            
            this.login.callback = ( async _ => {

                const resp = await call('POST', '/auth/login', { code_id: this.codeInput.value })
                const data = await resp.json()

                this.footerPanel.tag("logged")

            })

            {% endif %}

        }
        
        set role(role) {
            switch(role) {
                case "master":  {
                    this.footerPanel.select(".choice[master]").setAttribute("active","") ;
                    this.footerPanel.select(".choice[player]").removeAttribute("active") ;
                    this.footerPanel.select(".choice[watcher]").removeAttribute("active") ;
                    break ;
                }
                case "player": {
                    this.footerPanel.select(".choice[master]").removeAttribute("active") ;
                    this.footerPanel.select(".choice[player]").setAttribute("active","") ;
                    this.footerPanel.select(".choice[watcher]").removeAttribute("active") ;
                    break ;
                }
                case "watcher": {
                    this.footerPanel.select(".choice[master]").removeAttribute("active") ;
                    this.footerPanel.select(".choice[player]").removeAttribute("active") ;
                    this.footerPanel.select(".choice[watcher]").setAttribute("active","") ;
                    break ;
                }
                default:
                    console.error(`Role "${role}" isn't supported option for user`);
                    return
            }
        }


    }
    </script>
