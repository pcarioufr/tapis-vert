                if (eParent != null) { eParent.appendChild(this.e) }

            }

            tag(name)       { this.e.setAttribute(name, "") }
            untag(name)     { this.e.removeAttribute(name) }
            toggle(name)    { this.e.hasAttribute(name) ? this.untag(name) : this.tag(name) }

            set hidden(bool)    { bool ? this.tag('hidden')      : this.untag('hidden')      }
            set hoverable(bool) { bool ? this.tag('hoverable')   : this.untag('hoverable')   }
            set disabled(bool)  { bool ? this.tag('disabled')    : this.untag('disabled')    }

            select(query){ return this.e.querySelector(query) } 

            remove() {this.e.remove()}

            set id(id)            { this.e.id = id }
            set onclick(callback) { this.e.onclick = callback }
            
        }


