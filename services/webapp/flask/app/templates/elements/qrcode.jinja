    <!-- QRCODE ------ ------ ------ ------ -->

    <template id=t-qrcode>
        <div class="qrcode" rounded>
            <img/>
        </div>
    </template>
    <script>

    class QRCode extends Element {

        constructor(eParent){

            super( build("t-qrcode"), eParent )

        }

        set link(link) { 

            this.active = false
            call("GET", "/api/v1/qrcode", {link: link, size: 4} )
            .then(r => r.blob())
            .then(blob => imageAssign( this.select("img"), blob) )

        }

    }

    </script>
