# Tapis Vert Configuration
# Copy this file to .env and edit values below for your environment

# =============================================================================
# BOX CONFIGURATION
# =============================================================================
SSH_PUBLIC_KEY="ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC... your_ssh_public_key"

# =============================================================================
# ENVIRONMENT & DEPLOYMENT
# =============================================================================
ENVIRONMENT="prod"
DOMAIN="example.com"
SUBDOMAIN="www"

# =============================================================================
# INFOMANIAK
# =============================================================================
INFOMANIAK_TOKEN="abcdXYZ..."

# =============================================================================
# OPENSTACK INFRASTRUCTURE  
# =============================================================================
OS_USERNAME="your_openstack_username"
OS_PASSWORD="your_openstack_password"
OS_TENANT_ID="1234abcd..."
OS_TENANT_NAME="your_project_name"

# =============================================================================
# DEPLOYMENT
# =============================================================================
DEPLOY_USER="ubuntu"
DEPLOY_PATH="/home/ubuntu/services"

# =============================================================================
# FLASK APPLICATION
# =============================================================================
HOST="0.0.0.0"
FLASK_SECRET="super_secret_flask_key_change_me"
LEVEL="INFO"

# =============================================================================
# DATADOG MONITORING
# =============================================================================
DD_ENV="prod"
DD_VERSION="1.0.0"
DD_SITE="datadoghq.eu"
DD_API_KEY="1234abcd..."
DD_CLIENT_TOKEN="pub1234abcd..."
DD_APPLICATION_ID="12345678-1234-1234-1234-123456789012"
DD_TAGS="env:production,project:tapis-vert"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST="redis"
REDIS_DATA_DB="1"
REDIS_ROUNDS_DB="2"
REDIS_USERS_DB="3"
REDIS_ROOMS_DB="4"
REDIS_USERS_ONLINE_DB="5"
REDIS_PUBSUB_DB="9"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
MP_TOKEN="your_mixpanel_token_here"

# =============================================================================
# TERRAFORM OUTPUTS (AUTO-GENERATED - DO NOT EDIT MANUALLY)
# =============================================================================
SSH_HOST="ubuntu@1.2.3.4"
PUBLIC_IP_V4="1.2.3.4"
PUBLIC_IP_V6="2001:db8::1" 