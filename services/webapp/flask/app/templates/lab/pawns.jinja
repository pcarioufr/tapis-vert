<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pawn Designs</title>
    <style>
        /* Basic reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
        }

        h3 {
            text-align: center;
            margin: 10px 0;
        }

        .pawn-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px;
        }

        .pawn {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 80px;
        }

        .pawn-head {
            width: 20px;
            height: 20px;
            background-color: #333;
            border-radius: 50%;
            margin-bottom: 5px;
        }

        .pawn-body {
            width: 30px;
            height: 40px;
            background-color: #333;
            border-radius: 15px 15px 0 0;
        }

        .pawn-geo .pawn-body {
            width: 0;
            height: 0;
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-top: 40px solid #4CAF50;
        }

        .pawn-minimal .pawn-head {
            width: 15px;
            height: 15px;
            background-color: #ff5722;
        }

        .pawn-minimal .pawn-body {
            width: 25px;
            height: 25px;
            background-color: #ff5722;
            border-radius: 50%;
        }

        .pawn-gradient {
            width: 30px;
            height: 50px;
            background: radial-gradient(circle at top, #607D8B 20%, transparent 20%, transparent 50%, #607D8B 50%);
            border-radius: 50% 50% 0 0;
            margin: 10px auto;
        }

        .pawn-custom {
            width: 30px;
            height: 50px;
            border-radius: 50% 50% 0 0;
            margin: 10px;
        }

        .pawn-custom::before {
            content: '';
            display: block;
            width: 15px;
            height: 15px;
            background-color: inherit;
            border-radius: 50%;
            margin: 0 auto -5px;
        }

        .pawn-flat .pawn-head {
            width: 20px;
            height: 20px;
            background-color: #000;
        }

        .pawn-flat .pawn-body {
            width: 25px;
            height: 25px;
            background-color: #000;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <!-- Basic Circular Pawn -->
    <div class="pawn-wrapper">
        <h3>Basic Circular Pawn</h3>
        <div class="pawn">
            <div class="pawn-head"></div>
            <div class="pawn-body"></div>
        </div>
    </div>

    <!-- Geometric Pawn -->
    <div class="pawn-wrapper">
        <h3>Geometric Pawn</h3>
        <div class="pawn-geo">
            <div class="pawn-head"></div>
            <div class="pawn-body"></div>
        </div>
    </div>

    <!-- Minimalist Rounded Pawn -->
    <div class="pawn-wrapper">
        <h3>Minimalist Rounded Pawn</h3>
        <div class="pawn-minimal">
            <div class="pawn-head"></div>
            <div class="pawn-body"></div>
        </div>
    </div>

    <!-- Abstract Pawn Using CSS Gradients -->
    <div class="pawn-wrapper">
        <h3>Abstract Gradient Pawn</h3>
        <div class="pawn-gradient"></div>
    </div>

    <!-- Pawn with Customizable Colors -->
    <div class="pawn-wrapper">
        <h3>Customizable Color Pawns</h3>
        <div class="pawn-custom" style="background-color: green;"></div>
        <div class="pawn-custom" style="background-color: red;"></div>
    </div>

    <!-- Flat Pawn -->
    <div class="pawn-wrapper">
        <h3>Flat Pawn</h3>
        <div class="pawn-flat">
            <div class="pawn-head"></div>
            <div class="pawn-body"></div>
        </div>
    </div>
</body>
</html>
